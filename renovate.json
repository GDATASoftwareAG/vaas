{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignorePaths": [
    "assets",
    ".vscode",
    "backend",
    "protocol"
  ],
  "packageRules": [
    {
      "groupName": "{{{ replace '(.*?)\\/.*' '$1' packageFileDir}}}",
      "commitMessagePrefix": "{{{ replace '(.*?)\\/.*' '$1' packageFileDir}}}: ",
      "extends": [
        "group:allNonMajor"
      ],
      "matchPaths": [
        "*/**"
      ]
    },
    {
      "groupName": "{{{ replace '(.*?)\\/.*' '$1' packageFileDir}}}",
      "commitMessagePrefix": "{{{ replace '(.*?)\\/.*' '$1' packageFileDir}}}: ",
      "matchUpdateTypes": [
        "major"
      ],
      "matchPaths": [
        "*/**"
      ]
    }
  ]
}