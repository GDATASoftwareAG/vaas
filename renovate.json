{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignorePaths": [
    "assets",
    ".vscode",
    "backend",
    "protocol"
  ],
  "packageRules": [
    {
      "commitMessagePrefix": "{{baseDir}}: ",
      "additionalBranchPrefix": "{{baseDir}}/",
      "matchUpdateTypes": [
        "patch",
        "minor",
        "digest"
      ],
      "matchFileNames": [
        "*/**"
      ]
    },
    {
      "commitMessagePrefix": "{{baseDir}}: ",
      "additionalBranchPrefix": "{{baseDir}}/",
      "matchUpdateTypes": [
        "major"
      ],
      "matchFileNames": [
        "*/**"
      ]
    }
  ]
}