{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "rust",
      "matchPaths": [
        "rust/**"
      ]
    },
    {
      "groupName": "typescript",
      "matchPaths": [
        "typescript/**"
      ]
    },
    {
      "groupName": "ruby",
      "matchPaths": [
        "ruby/**"
      ]
    },
    {
      "groupName": "python",
      "matchPaths": [
        "python/**"
      ]
    },
    {
      "groupName": "php",
      "matchPaths": [
        "php/**"
      ]
    },
    {
      "groupName": "java",
      "matchPaths": [
        "java/**"
      ]
    },
    {
      "groupName": "dotnet",
      "matchPaths": [
        "dotnet/**"
      ]
    },
    {
      "groupName": "cicd",
      "matchPaths": [
        ".github/workflows/**"
      ]
    },
    {
      "groupName": "golang",
      "matchPaths": [
        "golang/vaas/**"
      ]
    },
  ]
}
