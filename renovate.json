{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "ignorePaths": [
    "assets",
    ".vscode",
    "backend",
    "protocol"
  ],
  "nix": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true
  },
  "prHourlyLimit": 0,
  "prConcurrentLimit": 0,
  "packageRules": [
    {
      "commitMessagePrefix": "{{{ replace '(.*?)\\/.*' '$1' packageFileDir}}}: ",
      "additionalBranchPrefix": "{{{ replace '(.*?)\\/.*' '$1' packageFileDir}}}/",
      "matchUpdateTypes": [
        "patch",
        "minor",
        "digest"
      ],
      "matchFileNames": [
        "*/**"
      ]
    },
    {
      "commitMessagePrefix": "{{{ replace '(.*?)\\/.*' '$1' packageFileDir}}}: ",
      "additionalBranchPrefix": "{{{ replace '(.*?)\\/.*' '$1' packageFileDir}}}/",
      "matchUpdateTypes": [
        "major"
      ],
      "matchFileNames": [
        "*/**"
      ]
    }
  ],
  "stabilityDays": 7,
  "vulnerabilityAlerts": {
    "enabled": true
  }
}
